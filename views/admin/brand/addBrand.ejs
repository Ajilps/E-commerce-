<%- include('../adminHead.ejs') %>
    <style>
        body {
            background-color: #f8f9fa;
        }
        .breadcrumb-item + .breadcrumb-item::before {
            content: ">";
        }
        .upload-area {
            border: 2px dashed #dee2e6;
            border-radius: 8px;
            padding: 2rem;
            text-align: center;
            position: relative;
            cursor: pointer;
            background: #fff;
        }
        .upload-area:hover {
            border-color: #00c389;
        }
        .thumbnail-preview {
            width: 100px;
            height: 100px;
            background-color: #dee2e6;
            border-radius: 8px;
            margin: 0 auto 1rem;
            position: relative;
        }
        .check-icon {
            position: absolute;
            top: 5px;
            right: 5px;
            color: #00c389;
            background: white;
            border-radius: 50%;
            padding: 2px;
        }
        .btn-save {
            background-color: #00c389;
            color: white;
        }
        .btn-save:hover {
            background-color: #00a371;
            color: white;
        }
        .change-image-btn {
            color: #00c389;
            text-decoration: none;
        }
        .change-image-btn:hover {
            color: #00a371;
        }
    </style>

    <div class="container-fluid py-4">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#" class="text-decoration-none" style="color: #00c389;">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="#" class="text-decoration-none" style="color: #00c389;">Brands</a></li>
                <li class="breadcrumb-item active">Brand Details</li>
            </ol>
        </nav>

        
       

        <!-- Main Content -->
        <div class="row">
            <!-- Thumbnail Section -->
            <!-- <div class="col-6 col-md-4 col-lg-3 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Thumbnail</h5>
                        <div class="upload-area">
                            <div class="thumbnail-preview">
                                <i class="fas fa-check check-icon"></i>
                            </div>
                            <p class="text-muted mb-2">Drag and drop image here, or<br>click change image</p>
                            <a href="#" class="change-image-btn">Change Image</a>
                        </div>
                    </div>
                </div>
            </div>
             -->
            <!-- General Information Section -->
            <div class="col-12 col-md-8 col-lg-9">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-4">General Information</h5>
                        <form id="brandForm">
                            <div class="mb-4">
                                <label class="form-label">Brand Name</label>
                                <input type="text" name="name" class="form-control" value="<%= locals.brand?.name %>">
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Description</label>
                                <textarea name="description" class="form-control" rows="4"><%= locals.brand?.description%></textarea>
                            </div>
                            <!-- New Image Upload Field -->
                            <div class="mb-4">
                                <label class="form-label">Upload Image</label>
                                <input type="file" id="brandImage" name="brandImage" class="form-control" accept="image/*" onchange="previewImage(event)">
                                <!-- Preview Container -->
                                <div class="mt-3">
                                    <img id="imagePreview" src="/uploads/re-images/<%= locals.brand?.imageUrl%>" alt="Image Preview" class="img-thumbnail" style="display: none; max-width: 200px;">
                                </div>
                            </div>
                            <!-- Buttons -->
                            <div class="d-flex justify-content-end mb-4">
                                <button id="Cancel" class="btn btn-light me-2">
                                    <i class="fas fa-times"></i> Cancel
                                </button>
                                <button type="submit" class="btn btn-save">
                                    <i class="fas fa-check"></i> Save Brand
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <script>// Cancel button
                const cancelButton = document.getElementById('Cancel');
                cancelButton.addEventListener('click', function() {
                    event.preventDefault();
                    if (confirm("cancel the form?")) {
                        txt = "You pressed OK!";
                        window.location.href = '/admin/brand';
                        
                        } else {
                        txt = "You pressed Cancel!";
                        event.preventDefault();
                        }
                                            
                });
            </script>
            
            <script>
                function previewImage(event) {
                    const imageInput = event.target;
                    const preview = document.getElementById('imagePreview');
                    
                    if (imageInput.files && imageInput.files[0]) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            preview.src = e.target.result;
                            preview.style.display = 'block';
                        };
                        reader.readAsDataURL(imageInput.files[0]);
                    }
                }
            </script>
            
            

    <script>
        const brandForm = document.getElementById('brandForm');

        brandForm.addEventListener('submit', async function (event) {
            event.preventDefault();
            const formData = new FormData(brandForm);

            const brandId = '<%= locals.brand?._id %>' || '';
            if ( brandId != '' ) {
                formData.append('brandId', brandId);
            }


          try {
              const response = await fetch('/admin/brand/addBrand', {
                  method: 'POST',
                  body: formData,
              });
              const data = await response.json();
              if (data.success) {
                  alert('Brand created successfully');
                  window.location.href = '/admin/brand';
              } else {
                  alert('An error occurred. Please try again.');
              }
          } catch (error) {
            console.log(error);
          }
        });
    </script>

   <%- include('../adminFoot') %>
</body>
</html>