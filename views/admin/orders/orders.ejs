
<%- include('../adminHead.ejs') %>
  <div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1>Order</h1>
      <div>
        <!-- <button class="btn btn-primary me-2">+ Add Order</button> -->
        <button class="btn btn-outline-secondary">Export</button>
      </div>
    </div>

    <div class="nav nav-tabs mb-3">
      <button class="nav-link active">All Status</button>
      <button class="nav-link">Processing</button>
      <button class="nav-link">Shipped</button>
      <button class="nav-link">Delivered</button>
      <button class="nav-link">Cancelled</button>
    </div>

    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Products</th>
            <th>Date</th>
            <th>Customer</th>
            <th>Total</th>
            <th>Payment</th>
            <th>Status</th>
            
            <th>Action</th>
          </tr>
        </thead>
        <p><% orders %></p>
        <tbody>
          <% if(orders){ %>
          <% orders.forEach(order=>{ %>
            <p><%#= order._id %></p>
           <% let totalQ = 0 %>
            <% order.products.forEach(product=>{   %>
              <%  totalQ += product.quantity %>
              <% }) %>
          <tr>
            <td><%= order.orderId %></td>
            <td><%=  totalQ   %></td>

            <% let date = new Date(order.createdAt) %>
            <td> <%= `${date.getDate()}/${date.toLocaleString('default', { month: 'short' })} / ${date.getFullYear() }` %></td>
            <td><%= order.userId.username %></td>
            <td>â‚¹ <%= order.totalPrice  %></td>
            <td><%= order.paymentStatus %></td>
            <td>
              <span class="badge 
                <% if (order.status === 'Pending') { %>bg-warning<% } %>
                <% if (order.status === 'Processing') { %>bg-info<% } %>
                <% if (order.status === 'Shipped') { %>bg-primary<% } %>
                <% if (order.status === 'Delivered') { %>bg-success<% } %>
                <% if (order.status === 'Cancelled') { %>bg-danger<% } %>
              ">
                <%= order.status %>
              </span>
            </td>
            <td>
              <a href="/admin/orders/<%= order._id%>" class="btn btn-outline-primary btn-sm me-2">Edit</a>
              <!-- <a href="#" class="btn btn-outline-danger btn-sm">Delete</a> -->
            </td>
          </tr>
          <!-- Add more rows as needed -->
              <% }) %>
            <%# }) %>
          <% } %>
        </tbody>
      </table>
    </div>

