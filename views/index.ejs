    <link rel="stylesheet" href="/style/user/homePage/homePage.css">
    <style>
        /* product image  */
        .productImage {
            width: 200px;
            height: 200px;
            object-fit: cover;
        }

        /* image card */
        .card {
            /* max-width: 200px; */
            margin: 10px;
        }
