<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShopEase - Your Online Store</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
       /* product image  */
    .productImage{
        width: 200px;
        height: 200px;
        object-fit: cover;
    }
    /* image card */
    .card{
        /* max-width: 200px; */
        margin: 10px;
    }
    </style>
</head>
<body>
    <!-- Navbar -->
    <%- include('head.ejs') %>
   

    <!-- Hero Carousel -->
    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/assets/productImg/androidphones-2048px-04371-2x1-1.webp" class="d-block w-100" alt="New Arrivals">
                <div class="carousel-caption">
                    <h2>New Season Arrivals</h2>
                    <p>Discover the latest trends and exclusive deals</p>
                    <button class="btn btn-primary btn-lg mb-2">Shop Now</button>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/assets/productImg/androidphones-2048px-04371-2x1-1.webp" class="d-block w-100" alt="Special Offers">
                <div class="carousel-caption">
                    <h2>Special Summer Offers</h2>
                    <p>Up to 50% off on selected items</p>
                    <button class="btn btn-primary btn-lg mb-2">View Deals</button>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/assets/productImg/androidphones-2048px-04371-2x1-1.webp" class="d-block w-100" alt="Electronics Sale">
                <div class="carousel-caption">
                    <h2>Electronics Sale</h2>
                    <p>Latest gadgets at unbeatable prices</p>
                    <button class="btn btn-primary btn-lg mb-2">Explore Now</button>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Featured Products -->
    <div class="container py-4">
        <div class="row">
            <div class="col-12 mb-3">
                <h4 class="text-dark">Recommended for you</h4>
                <p class="text-secondary small">Personalized picks!</p>
            </div>
        </div>
        <div class="row g-4">
            <!-- Product Card 1 -->
            <% products.forEach(product => { %>
            <div class="col-md-4">
                <a href="/user/product/<%= product._id %>" class="text-decoration-none">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="h-75">
                                <img src= "<%=product.productImageUrls[0]%>" alt="Product Image" class="img-fluid mb-3 " />
                            </div>
                            <h6 class="card-title text-dark"><%=product.name%></h6>
                            <div class="d-flex justify-content-center align-items-center gap-2">
                                <span class="text-dark fw-bold">₹<%= product.sellingPrice%></span>
                                <span class="text-decoration-line-through text-secondary">₹<%= product.regularPrice%></span>
                                <span class="text-success"><%= product.category.categoryOffers || 0%>% off</span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <% });  %>

               

    
    

    <%- include('footer.ejs') %>
    <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script> -->
    <script>
        // Search functionality
        const searchInput = document.getElementById('searchInput');
        const searchResults = document.getElementById('searchResults');

        searchInput.addEventListener('focus', () => {
            searchResults.classList.add('show');
        });

        searchInput.addEventListener('input', () => {
            if (searchInput.value.length > 0) {
                searchResults.classList.add('show');
            } else {
                searchResults.classList.remove('show');
            }
        });

        document.addEventListener('click', (e) => {
            if (!searchInput.contains(e.target) && !searchResults.contains(e.target)) {
                searchResults.classList.remove('show');
            }
        });
    </script>
</body>
</html>