<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Address</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
    <!-- <link href="https://cdn.jsdelivr.net/npm/@sweetalert2/theme-dark@4/dark.css" rel="stylesheet"> -->

    <style>
        body {
            background-color: #f8f9fa;
        }
        
        .sidebar {
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        
        .sidebar-link {
            display: flex;
            align-items: center;
            padding: 10px;
            color: #666;
            text-decoration: none;
            margin-bottom: 10px;
            border-radius: 5px;
        }
        
        .sidebar-link.active {
            background-color: #000;
            color: white;
        }
        
        .sidebar-link i {
            margin-right: 10px;
        }
        
        .form-control, .form-select {
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }
        
        .form-label {
            margin-bottom: 8px;
            font-weight: 500;
        }
        
        .optional-label {
            color: #999;
            font-weight: normal;
        }
        .error{
            color: red;
            font-size: 12px;
            margin-top: 5px;
            /* display: none; */
        }
    </style>
</head>
<body>
    <%- include('../userHeader.ejs')%>
    <div class="container py-4">
        <nav class="mb-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">HOME</a></li>
                <li class="breadcrumb-item"><a href="#">PROFILE</a></li>
                <li class="breadcrumb-item"><a href="#">ADDRESS</a></li>
                <li class="breadcrumb-item active">ADD</li>
            </ol>
        </nav>
        
        <div class="row">
            <%- include('./userSidePanel.ejs') %>
            
            <div class="col-lg-9">
                <div class="bg-white p-4 rounded-3 shadow-sm">
                    <h5 class="mb-4">Create Address</h5>
                    <% user.addresses.forEach((address)=>{  %>
                      <%  if(address._id == addressId){%>
                    <form id="addressForm" >
                        <div class="row mb-3">
                            <label class="form-label"> User Name </label>
                            <div class="col-md-6 mb-3 mb-md-0">
                                <input type="text" name="firstName" id="firstName" class="form-control" placeholder="name" value="<%=address.name %>">
                                <div class="error" id="usernameError"> </div>
                            </div>
                           
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Address</label>
                            <textarea class="form-control" name="address" id="address" rows="3" > <%= address.address  %></textarea>
                            <div class="error" id="addressError"> </div>

                        </div>

                        <div class="row mb-3">
                            <div class="col-md-3 mb-3 mb-md-0">
                                <label class="form-label">Country</label>
                                <select id="country" name="country" class="form-select">
                                    <option value=" <%= address.country %>">  <%= address.country %></option>
                                    <option value="AF">Afghanistan</option>
                                    <option value="AL">Albania</option>
                                    <option value="DZ">Algeria</option>
                                    <option value="AS">American Samoa</option>
                                    <option value="AD">Andorra</option>
                                    <option value="AO">Angola</option>
                                    <option value="AI">Anguilla</option>
                                    <option value="HT">Haiti</option>
                                    <option value="HN">Honduras</option>
                                    <option value="HU">Hungary</option>
                                    <option value="IS">Iceland</option>
                                    <option value="IN">India</option>
                                    <option value="ID">Indonesia</option>
                                    <option value="IR">Iran</option>
                                    <option value="IQ">Iraq</option>
                                    <option value="IE">Ireland</option>
                                    <option value="IL">Israel</option>
                                    <option value="IT">Italy</option>
                                    <option value="JM">Jamaica</option>
                                    <option value="JP">Japan</option>
                                    <option value="JO">Jordan</option>
                                </select>
                                <div class="error" id="countryError"> </div>
                            </div>
                            <div class="col-md-3 mb-3 mb-md-0">
                                <label class="form-label">Region/State</label>
                                <input type="text" class="form-control" name="state" id="state" value=" <%= address.state %>">
                                <div class="error" id="stateError"> </div>
                            </div>
                            <div class="col-md-3 mb-3 mb-md-0">
                                <label class="form-label">City</label>
                                <input type="text" class="form-control" name="city" id="city" value=" <%= address.city %>">
                                <div class="error" id="cityError"> </div>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Zip Code</label>
                                <input type="text" class="form-control" name="zipCode" id="zipCode" value=" <%= address.zipCode %>">
                                <div class="error" id="zipCodeError"> </div>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control" name="email" id="email" value=" <%= address.email %>">
                                <div class="error" id="emailError"> </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" name="phone" id="phone" value=" <%= address.phone %>">
                                <div class="error" id="phoneError"> </div>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label class="form-label">Default Address</label>
                            <div class="form-check">
                                <input style="display: none;" readonly class="form-check-input" type="checkbox" id="defaultAddress" name="defaultAddress" value= '<%= address.isDefault  %>'  >
                                <!-- <label class="form-check-label" for="defaultAddress">Make this address my default address</label> -->
                            </div>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-dark px-4">Save</button>
                        </div>
                    </form>
                    
                    
                      <% }}); %>
                </div>
            </div>
        </div>
    </div>
<%- include('../userFooter.ejs') %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.getElementById('addressForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    // Get all form fields
    const firstName = document.getElementById('firstName').value.trim();
    
    const address = document.getElementById('address').value.trim();
    const country = document.getElementById('country').value;
    const state = document.getElementById('state').value.trim();
    const city = document.getElementById('city').value.trim();
    const zipCode = document.getElementById('zipCode').value.trim();
    const email = document.getElementById('email').value.trim();
    const phone = document.getElementById('phone').value.trim();
    const defaultAddress = document.getElementById('defaultAddress').value;
    // const defaultAddress = 
            if(validate()){

            
   
    // If validation passes, prepare the data for submission
    const formData = {
        firstName,
      
        address,
        country,
        state,
        city,
        zipCode,
        email,
        phone,
        isDefault: defaultAddress,
    };

    try {
        // Submit the form data
        const response = await fetch('/user/shippingAddress/editAddress/<%= addressId%>', {
            method: 'PATCH',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(formData)
        });

        const result = await response.json();

        if (result.success) {
            await Swal.fire({
                title: 'Success!',
                text: 'Your form has been submitted successfully!',
                icon: 'success',
                confirmButtonText: 'OK'
            });
            // Reset the form
            document.getElementById('addressForm').reset();
            window.location.href = '/user/shippingAddress';
        } else {
            await Swal.fire({
                title: 'Error!',
                text: result.message || 'There was an error submitting your form. Please try again.',
                icon: 'error',
                confirmButtonText: 'OK'
            });
        }
    } catch (error) {
        await Swal.fire({
            title: 'Error!',
            text: `Error submitting form: ${error.message}`,
            icon: 'error',
            confirmButtonText: 'OK'
        });
    }
}
});

// validate address function
function validate(){
    const firstName = document.getElementById('firstName').value.trim();
    
    const address = document.getElementById('address').value.trim();
    const country = document.getElementById('country').value;
    const state = document.getElementById('state').value.trim();
    const city = document.getElementById('city').value.trim();
    const zipCode = document.getElementById('zipCode').value.trim();
    const email = document.getElementById('email').value.trim();
    const phone = document.getElementById('phone').value.trim();

    if(firstName.trim() === ""){
        document.getElementById('usernameError').textContent = "First name is required";
        return false;
    }
    if(country.trim() === ""){
        document.getElementById('usernameError').textContent = "First name is required";
        return false;
    }
    if(state.trim() === ""){
        document.getElementById('stateError').textContent = "State is required";
        return false;
    }
    if(city.trim() === ""){
        document.getElementById('cityError').textContent = "City is required";
        return false;
    }
    if(zipCode.trim() === ""){
        document.getElementById('zipCodeError').textContent = "Zip code is required";
        return false;
    }
    if(email.trim() === ""){
        document.getElementById('emailError').textContent = "Email is required";
        return false;
    }
    if(phone.trim() === "" || phone.trim().length < 10 ||phone.trim().length > 10 ){
        document.getElementById('phoneError').textContent = "Enter a valid Phone number. Eg.(9987917492)  ";
        return false;
    }


    return true;
}
    </script>
</body>
</html>