                                    <div class="d-flex align-items-center">
                                        <img src="/api/placeholder/60/60" alt="Product" class="product-img me-3">
                                        <div>Spigen Crystal Clear for Google Pixel 6 Pro...</div>
                                    </div>
                                </td>
                                <td>$39</td>
                                <td>×1</td>
                                <td>$39</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Order Activity -->
                <h6 class="mb-3">Order Activity</h6>
                <div class="timeline mb-4">
                    <div class="timeline-item">
                        <div class="timeline-icon">✓</div>
