                            <div class="card-body">
                                <p class="text-muted mb-0">Please be careful to any dent on package before accepting delivery.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../userFooter.ejs')%>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
