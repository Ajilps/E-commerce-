<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Wish List</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
</head>
<body>
    <%- include('../userHeader.ejs') %>
  <div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1>Wish List <span class="badge bg-secondary">2 items</span></h1>
      <button class="btn btn-primary">+ Add to Cart</button>
    </div>

    <div class="row">
      <div class="col-md-6 mb-4">
        <div class="card">
          <img src="https://picsum.photos/id/1/400/400" class="card-img-top" alt="iPhone 15 Pro">
          <div class="card-body">
            <h5 class="card-title">iPhone 15Pro</h5>
            <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
            <p class="text-success">In Stock</p>
            <div class="d-flex justify-content-between align-items-center">
              <h5 class="card-title">$149.99</h5>
              <div>
                <button class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></button>
                <button class="btn btn-primary btn-sm"><i class="bi bi-cart-plus"></i></button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6 mb-4">
        <div class="card">
          <img src="https://picsum.photos/id/2/400/400" class="card-img-top" alt="iPhone 15 Pro">
          <div class="card-body">
            <h5 class="card-title">iPhone 15Pro</h5>
            <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
            <p class="text-success">In Stock</p>
            <div class="d-flex justify-content-between align-items-center">
              <h5 class="card-title">$149.99</h5>
              <div>
                <button class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></button>
                <button class="btn btn-primary btn-sm"><i class="bi bi-cart-plus"></i></button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../userFooter.ejs') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  

</body>
</html>