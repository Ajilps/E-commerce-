<body>
  <%- include('userHeader.ejs') %>
    <!-- Navbar -->


    <!-- Hero Section with Carousel -->
    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true"
          aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="/assets/productImg/androidphones-2048px-04371-2x1-1.webp" class="d-block w-100" alt="New Arrivals">
          <div class="carousel-caption d-flex flex-column justify-content-center h-100">
            <div class="caption-content">
              <h2 class="display-4 fw-bold d-none d-md-block">New Season Arrivals</h2>
              <h3 class="fw-bold d-md-none">New Season Arrivals</h3>
              <p class="d-none d-sm-block">Discover the latest trends and exclusive deals</p>
              <a href="/user/store" class="btn btn-primary btn-lg mt-2 mt-md-3 px-4 py-md-2">Shop Now</a>
            </div>
          </div>
        </div>
        <div class="carousel-item">
          <img src="/assets/productImg/androidphones-2048px-04371-2x1-1.webp" class="d-block w-100"
            alt="Special Offers">
          <div class="carousel-caption d-flex flex-column justify-content-center h-100">
            <div class="caption-content">
              <h2 class="display-4 fw-bold d-none d-md-block">Special Summer Offers</h2>
              <h3 class="fw-bold d-md-none">Special Summer Offers</h3>
              <p class="d-none d-sm-block">Up to 50% off on selected items</p>
              <a href="/user/store" class="btn btn-primary btn-lg mt-2 mt-md-3 px-4 py-md-2">View Deals</a>
            </div>
          </div>
        </div>
        <div class="carousel-item">
          <img src="/assets/productImg/androidphones-2048px-04371-2x1-1.webp" class="d-block w-100"
            alt="Electronics Sale">
          <div class="carousel-caption d-flex flex-column justify-content-center h-100">
            <div class="caption-content">
              <h2 class="display-4 fw-bold d-none d-md-block">Electronics Sale</h2>
              <h3 class="fw-bold d-md-none">Electronics Sale</h3>
              <p class="d-none d-sm-block">Latest gadgets at unbeatable prices</p>
              <a href="/user/store" class="btn btn-primary btn-lg mt-2 mt-md-3 px-4 py-md-2">Explore Now</a>
            </div>
          </div>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>

    <!--  -->
    <!-- Product Slider Section -->
    <section class="product-slider-section">
      <div class="product-slider-header">
        <h2 class="product-slider-title">New Arrivals Products
        </h2>
        <a href="/user/store" class="view-all-link">See all offers</a>
      </div>

      <div class="product-slider-container">
        <button class="nav-button prev-button">&#10094;</button>

        <div class="product-slider-track">
          <% newArrivals?.forEach(product=> { %>
            <a href="/user/product/<%= product._id %>">
              <!-- Product 1 -->
              <div class="product-card">
                <img src="<%=product.productImageUrls[0]%>" alt="Wireless Earbuds" class="product-image">
                <div class="product-info">
                  <h3 class="product-title">
                    <%=product.name%>
                  </h3>
                  <span class="text-dark fw-bold product-price">₹<%= product.sellingPrice%></span> <br>
                  <span class="text-decoration-line-through text-secondary">₹<%= product.regularPrice%></span>
                  <span class="text-success">
                    <%= product.category.categoryOffers || 0%>% off
                  </span>
                </div>
            </a>
        </div>
        <% }); %>


      </div>

      <button class="nav-button next-button">&#10095;</button>
      </div>
    </section>
